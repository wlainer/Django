extends base.jade

block content
    h1 Cidades
    table
        thead
            td Nome
            td Editar
            td Excluir
        tbody
            each cidade in object_list
                tr
                    td #{cidade.nome}
                    td 
                        a(href="{% url 'clientes:cidade_edit' cidade.id %}") edit 
                    td 
                        a(href="{% url 'clientes:cidade_delete' cidade.id %}") delete 

    a(href="{% url 'clientes:cidade_new' %}") New