extends 'base.jade'

{% load crispy_forms_tags %}

block script
    script(type="text/javascript")
        $(document).ready(function() {
            $("#new").click(function() {
                window.location = '{% url "clientes:cliente_new" %}';
            });
        });

block content
    .panel.panel-info
        .panel-heading
            h2.panel-title Pesquisar
        .panel-body
            {% crispy form_pesquisar %}

    .panel.panel-info
       .panel-heading
            h2.panel-title Clientes
        .panel-body
            .barra-botoes
                .btn-group
                    button.btn-sm#new(type="button" class="btn btn-default") Novo
            hr
            table.table
                thead
                    td Nome
                    td Editar
                    td Exluir
                tbody
                    each cliente in clientes
                        tr
                            td #{cliente.nome}
                            td
                                a.glyphicon.glyphicon-edit(href="{% url 'clientes:cliente_edit' cliente.id %}") #{' '}Editar
                            td
                                a.glyphicon.glyphicon-trash(href="{% url 'clientes:cliente_delete' cliente.id %}") #{' '}Apagar
